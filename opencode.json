{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["personal-context.md"],
  "agent": {
    "plan": {
      "model": "anthropic/claude-opus-4-5"
    },
    "build": {
      "model": "anthropic/claude-sonnet-4-5"
    }
  },
  "mcp": {
    "analytics-mcp": {
      "type": "local",
      "command": ["pipx", "run", "analytics-mcp"],
      "environment": {
        "GOOGLE_APPLICATION_CREDENTIALS": "{env:HOME}/.config/opencode/ga4-mcp-credentials.json"
      },
      "enabled": true
    }
  }
}
